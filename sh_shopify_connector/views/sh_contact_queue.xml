<odoo>
    <record id='sh_shopify_configuration_queue_tree' model='ir.ui.view'>
        <field name="name">sh.queue.tree</field>
        <field name="model">sh.queue</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sh_queue_name"/>
                <field name="sh_contact_id"/>
                <field name="queue_sync_date"/>
                <field name="sh_current_state"/>
            </tree>
        </field>
    </record>
    <record id="sh_shopify_configurtion_queue_action" model="ir.actions.act_window">
        <field name="name">Contact Queue</field>
        <field name="res_model">sh.queue</field>
        <field name="context">{'search_default_contact_queue': 1}</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sh_shopify_configuration_queue_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Contact Queue
            </p>
        </field>
    </record>
    <record id="sh_shopify_contact_queue_search_view" model="ir.ui.view">
        <field name="name">shopify.contact.queue.search.view</field>
        <field name="model">sh.queue</field>        
        <field name="arch" type="xml">
            <search string="Shopify Queue">	
                <field name="sh_queue_name"/>
                <field name="sh_contact_id" />
                <field name="sh_order_id" />
                <field name="sh_product_id"/>
                <separator />
                <filter string="Contact" name="contact_queue" domain="[('sh_contact_id', '!=', False)]" />  
                <filter string="Orders" name="order_queue" domain="[('sh_order_id', '!=', False)]" />  
                <filter string="Products" name="product_queue" domain="[('sh_product_id', '!=', False)]" />  
            </search>
        </field>
    </record>
    <menuitem name="Queue" id="sh_shopify_queue" parent="sh_shopify_configuration_root" sequence="2"/>
    <menuitem name="Contact Queue" id="sh_shopify_contact_queue" action="sh_shopify_configurtion_queue_action" parent="sh_shopify_queue" sequence="1"/>
</odoo>