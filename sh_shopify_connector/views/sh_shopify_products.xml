<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="shopify_products_form" model="ir.ui.view">
        <field name="name">shopify.products.form</field>
        <field name="model">sh.shopify.configuration</field>
        <field name="inherit_id" ref="sh_shopify_connector.sh_shopify_configuration_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='contacts']" position="after">
                <page name="products" string="Products">
                    <group>
                        <group>
                            <field name="import_products"/>
                            <field name="sh_warehouse_id"/>
                            <field name="shopify_product_category"/>
                            <field name="last_sync_product" readonly="1" string="Last Sync"/>
                            <button type="object" class="btn btn-primary mt-2" name="submit_products" string="Sync Products"/>                           
                        </group>
                        <group>
                            <field name="also_import_image"/>
                            <field name="product_import_between_dates" string="Import Between Dates"/>
                            <field name="product_from_date" attrs="{'invisible' : [('product_import_between_dates', '=', False)]}" string="From Date"/>
                            <field name="product_to_date" attrs="{'invisible' : [('product_import_between_dates', '=', False)]}" string="To Date"/>
                        </group>
                    </group>
                    <h3 class="text-primary">Auto Schedule</h3>
                    <group>
                        <field name="auto_import_products"/>                                  
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>