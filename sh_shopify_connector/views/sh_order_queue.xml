<odoo>
    <record id='sh_shopify_order_queue_tree' model='ir.ui.view'>
        <field name="name">sh.queue.order.tree</field>
        <field name="model">sh.queue</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sh_queue_name"/>
                <field name="sh_order_id"/>
                <field name="queue_sync_date"/>
                <field name="sh_current_state"/>
            </tree>
        </field>
    </record>
    <record id="sh_shopify_order_queue_action" model="ir.actions.act_window">
        <field name="name">Order Queue</field>
        <field name="res_model">sh.queue</field>
        <field name="context">{'search_default_order_queue': 1}</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sh_shopify_order_queue_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Order Queue
            </p>
        </field>
    </record>
    <menuitem name="Orders Queue" id="sh_shopify_order_queue" action="sh_shopify_order_queue_action" parent="sh_shopify_queue" sequence="3"/>
</odoo>